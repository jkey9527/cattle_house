<view class="weui-form">
    <view class="weui-form__text-area">
      <h2 class="weui-form__title">用户登录</h2>
    </view>
    <view class="weui-form__control-area">
      <view class="weui-cells__group weui-cells__group_form">
        <view class="weui-cells">
          <label for="js_input1" class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><span class="weui-label">账号</span></view>
            <view class="weui-cell__bd">
                <input id="user_no" type="number" class="weui-input" placeholder="请输入用户编号/手机号" bindinput="get_user_no"/>
            </view>
          </label>
          <label for="js_input2" class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><span class="weui-label">密码</span></view>
            <view class="weui-cell__bd">
                <input id="password" type="password" class="weui-input" placeholder="请输入密码" bindinput="get_user_password"/>
            </view>
          </label>
        </view>
      </view>
    </view>
    <view class="weui-form__opr-area">
      <a role="button" disabled="" aria-disabled="true" class="weui-btn weui-btn_primary" href="javascript" id="showTooltips" wah-hotarea="click" bindtap="login">登录</a>
    </view>
    <view class="weui-form__extra-area">
      <view class="weui-footer">
        <p class="weui-footer__text">cattle © 2023-2050 house</p>
      </view>
    </view>
  </view>