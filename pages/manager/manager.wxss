.container{
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.top{
  text-align: center;
  width: 100%;
  margin-bottom: 10px;
}
.main{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
}
.main view{
  flex-grow: 1;
  display: block;
  display: flex;
  align-items: center;
  background-color: #ccc;
  margin-bottom: 10px;
  padding: 10px;
  color: #fff;
  justify-content: space-between;
}
.main view label{
  display: inline-block;
  font-size: 25px;
}